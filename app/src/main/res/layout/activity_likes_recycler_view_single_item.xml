<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.facebook.drawee.view.DraweeView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:roundAsCircle="true"
        android:id="@+id/cardViewlikesActivityDraweeView"
        android:src="@color/colorBlack"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textColor="@color/colorWebsiteProfile"
            android:textSize="20dp"
            android:id="@+id/cardViewLikesActivityTextView"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_toRightOf="@id/cardViewLikesActivityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="is added to your notification list for"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:id="@+id/cardViewLikesActivityStaticTextView"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</LinearLayout>
</android.support.v7.widget.CardView>