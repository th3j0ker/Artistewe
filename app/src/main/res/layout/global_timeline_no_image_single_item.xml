<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/Relativelayout1Gloaltimeline"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardViewNoImageFullNameGlobalTimeline"
            android:text="Full Name"
            />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/cardViewNoImageNotificationImageButton"
            android:background="@color/colorTransparent"
            android:src="@drawable/ic_notifications_none_black_24dp" />
        <TextView
            android:padding="10dp"
            android:id="@+id/cardViewNoImageTitleGlobalTimeLine"
            android:layout_below="@id/cardViewNoImageFullNameGlobalTimeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textIsSelectable="false"
            android:text="Title"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <View
            android:id="@+id/myViewViewBlackBelowTitle"
            android:layout_below="@id/cardViewNoImageTitleGlobalTimeLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"/>
        <!-- <ImageView
             android:layout_marginTop="10dp"
             android:layout_below="@id/myViewViewBlackBelowTitle"
             android:layout_width="200dp"
             android:layout_height="200dp"
             android:id="@+id/cardViewImagePostViewGlobalTimeline"/>-->
        <TextView
            android:id="@+id/cardViewNoImageContentGlobalTimeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_alignStart="@+id/cardNameTextview"
            android:layout_alignLeft="@+id/cardNameTextview"
            android:layout_below="@+id/myViewViewBlackBelowTitle"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textIsSelectable="false"
            android:padding="10dp"
            android:text="this is a short post about nothing this means something "/>
        <View
            android:id="@+id/cardViewViewBlack"
            android:layout_below="@id/cardViewNoImageContentGlobalTimeline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"/>
        <LinearLayout
            android:layout_below="@id/cardViewViewBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/cardViewNoImageStarImageButton"
                android:layout_margin="5dp"
                android:src="@drawable/ic_star_border_black_40dp"
                android:background="@color/colorTransparent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/cardViewNoImageLikesCount"
                android:textColor="@color/colorBlack"
                android:text="0"
                android:textSize="25sp"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_bookmark_border_black_32dp"
                android:background="@color/colorTransparent"
                android:id="@+id/cardViewNoImageSaveImageButton"
                android:layout_below="@id/cardViewViewBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/cardViewNoImageSavesCount"
                android:textColor="@color/colorBlack"
                android:text="0"
                android:textSize="25sp"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_share_black_24dp"
                android:background="@color/colorTransparent"
                android:id="@+id/cardViewNoImageShareImageButton"
                android:layout_below="@id/cardViewViewBlack"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>