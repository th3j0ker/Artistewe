<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:layout_marginRight="2.5dp"
    android:layout_marginLeft="2.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--<de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/myProfilePersonalProfilePicCircleImageView"
            android:src="@drawable/picture_firebaseui_background"/>-->

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginTop="10dp"
            android:layout_below="@id/myViewViewBlackBelowTitle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:roundAsCircle="true"
            android:src="@color/colorBlack"
            android:id="@+id/myProfilePersonalProfilePicCircleDraweeView"
            fresco:placeholderImage="@drawable/myPlaceholderImage" />

        <TextView
            android:id="@+id/myProfilePersonalFullNameTextView"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some Name"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/myProfilePersonalProfessionTextView"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profession"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/myProfilePersonalWebsiteTextView"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="website"
            android:textSize="25sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>