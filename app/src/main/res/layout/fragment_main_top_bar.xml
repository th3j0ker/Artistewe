<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/myCamerafragmentscrollview"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true"
                    android:src="@drawable/ic_paint_black"/>
                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="painters"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="100dp"
                android:layout_height="80dp">
                <ImageView
                    android:padding="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true"
                    android:src="@drawable/ic_sketch_black"/>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sketch artist"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true"
                    android:src="@drawable/ic_sing_black"/>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="singers"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:padding="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true"
                    android:src="@drawable/ic_decorators_black"/>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="decorators"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
                android:layout_width="100dp"
                android:layout_height="80dp">
            <ImageView
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:src="@drawable/ic_photographers_black"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="photographers"/>
        </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true"
                    android:src="@drawable/ic_dancers_black"/>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dancers"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true"
                    android:src="@drawable/ic_designer_black"/>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="designer"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>