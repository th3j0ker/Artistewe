<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:textColor="@color/colorBlack"
            android:id="@+id/numberofpostsTextView"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/postsstaticTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/numberofpostsTextView" />

        <TextView
            android:id="@+id/numberoffollowersTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="100"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/numberofpostsTextView"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/numberoffollowingTextView"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.481" />

        <TextView
            android:id="@+id/followersstaticTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/numberoffollowersTextView"
            app:layout_constraintLeft_toRightOf="@+id/postsstaticTextView"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/followingStaticTextView"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.561" />

        <TextView
            android:id="@+id/numberoffollowingTextView"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="18sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/followingStaticTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/numberoffollowingTextView" />

        <TextView
            android:background="@drawable/black_border"
            android:id="@+id/EditYourProfileTextView"
            android:layout_width="167dp"
            android:layout_height="21dp"
            android:text="Edit your profile"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/followersstaticTextView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.033" />
    </android.support.constraint.ConstraintLayout>
</merge>