<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_grey_border_bottom">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_grey_border_top"
            android:id="@+id/profilePrimeToolBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/backArrowEditProfiletoolbar"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_goback_arrow"
                    />
                <TextView
                    android:layout_toRightOf="@id/backArrowEditProfiletoolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp"
                    android:layout_centerVertical="true"
                    android:id="@+id/EditProfileStaticTextView"/>
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/saveChangesToProfileImgVew"
                    android:src="@drawable/ic_save_changes"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
</merge>